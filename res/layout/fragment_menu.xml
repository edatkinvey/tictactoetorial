<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/menu_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:stretchColumns="0" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="Player"
                android:textStyle="bold" />

            <TextView
                android:paddingRight="5dp"
                android:text="Wins"
                android:textStyle="bold" />

            <TextView
                android:text="Loses"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView android:text="Player813457" />

            <TextView android:text="36" />

            <TextView android:text="4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView android:text="Player23412" />

            <TextView android:text="24" />

            <TextView android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView android:text="Player5673" />

            <TextView android:text="22" />

            <TextView android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView android:text="Player134" />

            <TextView android:text="16" />

            <TextView android:text="8" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/menu_newgame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@color/kinvey_orange"
        android:text="New Game"
        android:textColor="@color/ghost_white" />



</RelativeLayout>